<head>
  <title>Admin Panel - Pages Index</title>
</head>
<%= link_to "Back to Admin Panel", admin_index_path %>
<center>
  <h1>Pages Admin Panel</h1>
  <p><h2><%= link_to "Submit New Page", new_admin_page_path %></h2></p>
  <table>
  <col width="250">
  <col width="50">
  <col width="50">
  <% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.title, page_path(page) %></td>
    <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
    <td><%= link_to "Delete", admin_page_path(page), method: :delete %></td>
  </tr>
  <% end %>
  </table>
</center>
